{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Note-taker: ~/Documents/note-taker/ only",
  "windows": ["main"],
  "permissions": [
    "fs:allow-read-dir",
    "fs:allow-read-text-file", 
    "fs:allow-write-text-file",
    "fs:allow-create",
    "fs:allow-mkdir", 
    {
      "identifier": "fs:scope-document-recursive",
      "allow": [{ "path": "~/Documents/note-taker/**" }]
    },
    "core:default",
    "core:menu:default",
    "core:event:default"
  ]
}
